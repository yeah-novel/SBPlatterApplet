/* components/orderCell/orderCell.wxss */
.cell-view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  border-radius: 20rpx;
  /* background-color: black; */
}

.cell-content{
  display: flex;
  flex-direction: column;
  width:80%;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  background-color:#ffffff;
  border-radius: 20rpx;
  box-shadow: 0px 15px 30px rgba(20, 102, 204, 0.16);
  /* background-color: royalblue; */
}

.cell-title{
  display: flex;
  align-items: center;
}

.title-text{
  margin-top: 20rpx;
  margin-left: 20rpx;
  font-weight: 400;
}

.cell-detail{
  margin-top: 20rpx;
  font-size: 30rpx;
  justify-self:flex-end;
  color: #ff0000;
  margin-right: 20rpx;
}

.cell-top{
  display: flex;
  align-items: center;
  border-radius: 15rpx;
  margin: 0rpx 30rpx 10rpx 30rpx;
}

.top-text{
  color: #999999;
  font-size: 35rpx;
}

.top-right{
  margin-left: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}


.cell-bottom{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.cell-button{
  margin-top: 20rpx;
  width: 40%;
  font-size: 34rpx;
  color: #ffffff;
}

.confirm-button{
  background-color: #1167c9;
}

.cancel-button{
  background-color: #d36363;
}

.diable-bottom{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.state-image{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  margin-top: -100rpx;
}