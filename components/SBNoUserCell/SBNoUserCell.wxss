.user-content{ 
  width: 40vw; 
  height: 230rpx; 
  background-color: rgba(102, 102, 102, 0.7); 
  margin: 20rpx 20rpx; 
  border-radius: 30rpx; 
  display: flex; 
  flex-direction: row; 
  flex-direction: column; 
  justify-content: center; 
  align-items: center; 
  box-shadow:inset 0px 4px 4px rgba(255, 255, 255, 0.3); 
  /* align-items: center; */ 
} 
 
.default-avatar{ 
  width: 80rpx; 
  height: 80rpx; 
  border-radius: 40rpx; 
  box-sizing: border-box; 
  border: 2px solid #ffffff; 
} 
 
.default-text{ 
  margin-top: 20rpx; 
  color: #ffffff; 
  font-size: 32rpx; 
  font-weight: 300; 
} 