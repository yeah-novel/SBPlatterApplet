/* components/messageCell/messageCell.wxss */
.swipe-cell{
  height: 150rpx;
  width: 95vw;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  background-color: rgb(206, 62, 62);
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.cell-content{
  height: 150rpx;
  width: 95vw;
  display: flex;
  align-items: center;
  border-radius: 12px;
  background-color: rgb(8, 28, 44);
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.cell-left{
  height: 100%;
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background-color: rgba(256, 0, 0, 1); */
}

.view-tableNo{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font: 45rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: rgb(87, 183, 125);
}

.cell-avatar{
  /* background-color: royalblue; */
  width: 80rpx;
  height: 80rpx;
}



.cell-right{
  height: 100%;
  width: 80%;
  display: flex;
  flex-direction: column;
  flex-direction: column;
  justify-content:center;
  align-items: flex-end;
  margin-right: 20rpx;
  /* background-color: rgba(0, 0, 255, 1); */
}

.cell-top{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 40%;
  margin-top: 20rpx;
}

.nickname{
  width: 70%;
  height: 100%;
  color: rgba(255, 255, 255, 1);
  font-size: 14px;
  font-weight: 200;
  font-family: 'Times New Roman', Times, serif;
}

.cell-time{
  width: 36%;
  height: 100%;
  color: rgb(142, 163, 179);
  font-size: 12px;
}
.cell-bottom{
  display: flex;
  align-items: center;
  width: 100%;
  height: 50%;
}

.message{
  height: 100%;
  width: 90%;
  color:rgb(142, 163, 179);
  font-size: 12px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-family: 'Times New Roman', Times, serif;
}

.cell-tag{
  text-align: center;
  font-size: 10px;
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background-color: rgb(87, 183, 125);
}

.delete{
  font-size: 36rpx;
  font-weight: 300;
  height: 100%;
  margin-left: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(255, 255, 255);
}



