/* pages/index/applyTable/applyTable.wxss */
.page-apply{
  display: flex;
  /* justify-content: center; */
}

.page-head {
  width: 90vw;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: -webkit-linear-gradient(left,rgba(96.02,67,255,1.00) ,rgba(54,209,241,0.70));
  border-radius: 20rpx;
}
.note-text{
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
  width: 70%;
  font-family: 'Times New Roman', Times, serif;
}
.page-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

label{
  color: #ffffff;
  font-size: 30rpx;
  width: 200rpx;
}

.filter-item1{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 20vw;
  align-items: center;
  width: 100%;
}

.filter-item2{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-left: 20vw;
  width: 100%;
}

.van-dropdown-menu{
  height: 70rpx !important;
  width: 300rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, 1) !important;
}

.van-dropdown-item{
  height: 300rpx;
  width: 40vw;
  margin: 10rpx 10vw 0rpx 50vw;
  border-radius: 20rpx ;
}

.input-item{
  background-color: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  height: 40rpx;
  color: #000000;
  font-size: 12px;
}

.input-time{
  background-color: rgba(255, 255, 255, 1);
  color: #000000;
  width: 200rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  border-radius: 20rpx;
}

.table-pay >van-field{
  border-radius: 20rpx;
  width: 40vw;
  font-size: 20rpx;
}

van-radio-group{
  margin-top: 10rpx;
  width: 90%;
}
van-radio{
  background-color: rgba(255, 255, 255, 1) !important;
  border-radius: 35rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.van-radio__label{
  font-size: 27rpx;
  font-weight: 600;
}

.van-radio__icon{
  margin-left: 15rpx;
}

.table-theme >van-cell-group{
  width: 80%;
  
}

.van-cell{
  border-radius: 20rpx;
}

.btn-apply{
  width: 90vw;
  margin-top: 40rpx;
  border-radius: 20rpx;
  background: -webkit-linear-gradient(left,rgba(96.02,67,255,1.00) ,rgba(54,209,241,0.70));
  box-shadow: 0px 15px 30px rgba(20, 102, 204, 0.16);
  font-size: 36rpx;
  color: #ffffff;
}


.time-picker{
  width: 100vw;
  position:fixed; 
  bottom:0;
}

