/* pages/menu/menu.wxss */
.page-menu{
  display: flex;
  height: 100vh;
  width: 100vw;
  flex-direction: row;
}

.wrapper{
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 左侧菜单分类*/
.left-sidebar{
  height: 100vh;
  width: 25vw;
  background-color:#ffffff;
  box-shadow: rgba(255, 255, 255, 0.5);
} 

.van-sidebar-item{
  font-size: 30rpx;
  height: 80rpx;
  width: 25vw;
  font-size: 12px !important;
  /* background-color:rgba(255, 255, 255, 0.38) !important; */
}

.van-sidebar-item--selected{
  border-color:rgb(87, 183, 125) !important;
}

/* 右侧菜单列表*/
.right-menu{
  width: 90vw;
  height: 100vh;
  margin-left: 30rpx;
}

.menu-list{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.type-line{
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
}

.line{
  width: 40%;
  height: 2rpx;
  background-color:rgb(87, 183, 125) ;
}

.type-text{
  width: 20%;
  font-size: 40rpx;
  font-weight: 700;
  margin-left: 20rpx;
  text-align: center;
  color: rgb(87, 183, 125);

}

.menu-item{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.menu-image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
  border: 2px solid #f74e2f;
}

.menu-name{
  width: 50%;
  font-size: 34rpx;
  color: #ffffff;
  margin-left: 40rpx;
}

.menu-price{
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #ffffff;
}