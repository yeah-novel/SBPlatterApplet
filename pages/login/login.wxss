/* pages/login/login.wxss */
.page-login{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw; 
  height: 100vh; 
  background-color: rgba(0, 0, 0, 0.95);
}

.wrapper{
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-logo{
  width: 100vw;
  height: 40vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-icon{
  width: 100%;
  height: 100%;
}

.view-info{
  width: 100vw;
  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view-head{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.img-avatar{
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  border-radius: 75rpx;
  border: 2px solid #ffffff;
}

.head-right{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.input-nickname{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  width: 340rpx; height: 70rpx; 
  color: #000000;
  background: rgba(252, 252, 252, 1);
  box-shadow: inset 0px -4px 16px rgba(4, 4, 4, 0.31);
}

.input-birth{
  width: 340rpx; height: 70rpx; 
  margin-top: 10rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  box-shadow: inset 0px -4px 16px rgba(4, 4, 4, 0.31);
}

.view-gender{
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}


.gender-fmale{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 150rpx;
  background-color: #9b9292;
  border-radius: 30rpx;
  border: 2px solid #ffffff;
  box-shadow: inset 0px -4px 16px rgba(4, 4, 4, 0.31);
}

.gender-male{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 150rpx;
  background-color: #9b9292;
  border-radius: 30rpx;
  margin-left: 30rpx;
  border: 2px solid #ffffff;
  box-shadow: inset 0px -4px 16px rgba(4, 4, 4, 0.31);
}

.img-gender{
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  border-radius: 75rpx;
}

.btn-signup{
  width: 400rpx;
  margin-top: 40rpx;
  border-radius: 20rpx;
  background: -webkit-linear-gradient(left,rgba(96.02,67,255,1.00) ,rgba(54,209,241,0.70));
  box-shadow: inset 0px -4px 16px rgba(4, 4, 4, 0.31);
  color: #ffffff;
}

.time-picker{
  width: 100vw;
  position:fixed; 
  bottom:0;
}

.input-time{
  color: #ffffff;
  width: 200rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  margin-left: 20rpx;
}

